
@{
    ViewBag.Title = "Schedule";
}

@section Styles {
    <link href="~/App/Schedule/schedule.css" rel="stylesheet" />
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Lịch các lớp
    </h1>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <!-- /.col -->
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-body no-padding">
                    <!-- THE CALENDAR -->
                    <div id="calendar">
                        <div class="calendar-control">
                            <div class="btn-group" role="group" aria-label="Basic example">
                                <button id="prev" type="button" class="btn btn-light btn-calendar-navigate">&lt;</button>
                                <button id="next" type="button" class="btn btn-light btn-calendar-navigate">&gt;</button>
                            </div>
                            <div class="calendar-control-current-week"></div>
                            <div class="calendar-remaining-sessions-area">
                                <div class="calendar-remaining-sessions"></div>
                                <div class="calendar-remaining-sessions-desc"><p>Số buổi<br />còn lại</p></div>
                            </div>
                        </div>
                        <table id="calendar" width="100%">
                            <thead id="calendarHead"></thead>
                            <tbody id="calendarBody"></tbody>
                        </table>
                    </div>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /. box -->
        </div>
        <!-- /.col -->
    </div>
    <div class="modal fade" id="modal-register" style="display: none;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                    <h4 class="modal-title"></h4>
                </div>
                <div class="modal-body">
                    <div class="modal-body-info">
                    </div>
                    <p>Số buổi còn lại <span class="modal-body-remaining-sessions"></span></p>
                    <p class="modal-body-message"></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Thoát</button>
                    <button type="button" id="btn-action" class="btn btn-primary"></button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->

@section Scripts {
    @Scripts.Render("~/bundles/moment")
    <script src="~/App/Schedule/schedule.js"></script>
}

