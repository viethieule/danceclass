
@{
    ViewBag.Title = "Create";
}

@section Styles {
    @Styles.Render("~/Content/bootstrap-datepicker")
    <link href="~/App/Common/css/form.css" rel="stylesheet" />
}

<section class="content-header">
    <h1>
        Tạo hội viên
    </h1>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-9">
            <div class="box box-primary">
                <form id="createMember">
                    <div class="box-body">
                        <div class="form-group">
                            <label class="required" for="name">Tên</label>
                            <input type="text" class="form-control" id="name" name="name">
                        </div>
                        <div class="form-group">
                            <label for="dob">Ngày sinh</label>

                            <div class="input-group date">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <input id="dob" name="dob" type="text" class="form-control pull-right">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" class="form-control" id="email" name="email" placeholder="email@example.com">
                        </div>
                        <div class="form-group">
                            <label class="required" for="phone">Điện thoại</label>
                            <input type="number" class="form-control" name="phone" id="phone">
                        </div>
                        <div class="form-group">
                            <label class="required" for="branch">Chi nhánh đăng ký</label>
                            <select class="form-control" id="branch" name="branch"></select>
                        </div>
                        <div class="form-group">
                            <label class="required" for="package">Gói tập</label>
                            <select class="form-control" id="package" name="package">
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="expired">Hạn (tháng)</label>
                            <input type="text" class="form-control" id="expired" name="expired">
                        </div>
                        <div class="form-group">
                            <label for="sessions">Số buổi</label>
                            <input type="number" class="form-control" id="sessions" name="sessions">
                        </div>
                        <div class="form-group">
                            <label for="price">Giá</label>
                            <input type="number" class="form-control" id="price" name="price">
                        </div>
                    </div>
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary pull-right">Tạo</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/inputMask")
    @Scripts.Render("~/bundles/moment")
    @Scripts.Render("~/bundles/bootstrap-datepicker")
    <script src="~/App/Common/js/formUtils.js"></script>
    <script src="~/App/Member/Create/create.js"></script>
}

