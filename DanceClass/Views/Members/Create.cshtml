
@{
    ViewBag.Title = "Create";
}

<section class="content-header">
    <h1>
        Tạo hội viên
    </h1>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-9">
            <div class="box box-primary">
                <form id="createMember">
                    <div class="box-body">
                        <div class="form-group">
                            <label for="name">Tên</label>
                            <input type="text" class="form-control" id="name" name="name">
                        </div>
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" class="form-control" id="email" name="email" placeholder="email@example.com">
                        </div>
                        <div class="form-group">
                            <label for="identity">Chứng minh nhân dân</label>
                            <input type="number" class="form-control" name="identity" id="identity">
                        </div>
                        <div class="form-group">
                            <label for="phone">Điện thoại</label>
                            <input type="number" class="form-control" name="phone" id="phone">
                        </div>
                        <div class="form-group">
                            <label for="package">Gói tập</label>
                            <select class="form-control" id="package" name="package">
                            </select>
                        </div>
                    </div>
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary pull-right">Tạo</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/App/Member/Create/create.js"></script>
}

